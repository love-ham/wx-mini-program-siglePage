/* pages/magzienContent/magzienContent.wxss */
@import "../extra/css/commenList.wxss";
page{
    background-color: rgb(233, 227, 227);
    display: flex;
    align-items: center;
    flex-direction: column;
}
.poster{
    width: 100%;
    height: 580rpx;
    display: flex;
    align-items: center;
    flex-direction: column;
}
.poster .image{
    width: 100%;
    height: 480rpx;
}
.poster .image image{
    width: 100%;
    height: 480rpx;
}
.poster .title{
    width: 80%;
    height:200rpx;
    background-color: #fff;
    margin-top: -100rpx;
}
.poster .title text{
    box-sizing: border-box;
    display: inline-block;
    height: 100rpx;
    width: 100%;
    line-height: 100rpx;
    font-size: 52rpx;
    padding: 0rpx 25rpx;
}
.poster .title view{
    position: relative;
    height: 100rpx;
    width: 100%;
}
.poster .title view .control{
    position: absolute;
    width: 200rpx;
    height: 100rpx;
    right: 0rpx;
    display: flex;
}
.poster .title view .control view{
    height: 100%;
    width: 50%;
    padding: 0px;
    background-color: transparent;
    display: flex;
    align-items: center;
    justify-content: center;
}
.poster .title view .control view image{
    height: 60%;
    width: 60%;
}
.poster .title view .control button{
    height: 100%;
    width: 50%;
    padding: 0px;
    background-color: transparent;
    display: flex;
    align-items: center;
    justify-content: center;
}
.poster .title view .control .button::after{
    border: none;
}.poster .title view .control button image{
    height: 60%;
    width: 60%;
}
.containerItem .itemBottom text{
    padding: 8rpx 20rpx;
    border: none;
    color: #111;
}
