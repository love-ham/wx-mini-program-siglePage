/* pages/articleContent/articleContent.wxss */
@import "../extra/css/commendArticleContent.wxss";
.middle{
    height: 500rpx;
    width: 100%;
    margin-top: 30rpx;
}
.middle swiper{
    height: 100%;
    width: 100%;
}
.middle image{
    height: 100%;
    width: 100%;
}
.middleVideo{
    position: relative;
    height: 500rpx;
    width: 100%;
    margin-top: 30rpx;
}
.middleVideo video{
    width: 100%;
    height: 100%;
}
.middleVideo .coverWrapper{
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0rpx;
    background-color: red;
}
.middleVideo .coverWrapper .coverDuck{
    height: 100%;
    width: 100%;
}
.middleVideo .coverWrapper .coverButton{
    position: absolute;
    height: 100rpx;
    width: 100rpx;
    border: 1px solid #000;
    top: 50%;
    left: 50%;
    margin-left: -50rpx;
    margin-top: -50rpx;
    background: rgba(0,0,0,0.6);
    border: 0px solid #000;
    border-radius: 50%;
}
.middleVideo .coverWrapper .coverButton .playImg{
    position: absolute;
    height: 50rpx;
    width: 50rpx;
    top:50%;
    left: 50%;
    margin-top: -35rpx;
    margin-left: -25rpx;
}
.middleVideo .coverWrapper .coverButton .playTime{
    position: absolute;
    top: 50%;
    left: 50%;
    margin-left: -20rpx;
    margin-top: 10rpx;
    font-size: 32rpx;
    color: #aaa;
}
.middleAudio{
    padding: 30rpx 0rpx;
    height: 240rpx;
    width: 90%;
    margin-top: 30rpx;   
    display:flex;
    flex-direction: row;
    align-items: center;
    background-color: rgb(253, 251, 251);
}
.middleAudio .left{
    height: 100%;
    width: 25%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.middleAudio .left image{
    width: 50%;
}
.middleAudio .right{
    width: 75%;
    height: 100%;
    border: none;
    display: flex;
    flex-direction: column;
}
.middleAudio .right .rightText{
    height: 50%;
    width: 100%;
    border: none;
}
.middleAudio .right .rightText .title{
    display: block;
    margin-top: 10rpx;
    font-size: 42rpx;
}
.middleAudio .right .rightText .info{
    font-size: 32rpx;
    line-height: 32rpx;
    color: #aaa;
}
.middleAudio .right .progress{
    position: relative;
    height: 30%;
    width: 506rpx;
    padding: 0rpx 0rpx 0rpx 0rpx;
    border:none;
}
.middleAudio .right .progress progress{
    height: 100%;
    width: 506rpx;
    padding: 0rpx 0rpx 0rpx 0rpx;
    border:none;
}
.middleAudio .right .progress .spanButton{
    position: absolute;
    width: 24rpx;
    height: 24rpx;
    background-color: #00b064;
    top: 50%;
    margin-top: -12rpx;
    margin-left: -12rpx;
    border-radius: 50%;
}
.middleAudio .right .timeText{
    position: relative;
    height: 50%;
    width: 100%;
}
.middleAudio .right .timeText .start{
    position: absolute;
    top: 5rpx;
    left: 0rpx;
    font-size: 32rpx;
    color: #aaa;
}
.middleAudio .right .timeText .over{
    position: absolute;
    top: 5rpx;
    right: 0rpx;
    font-size: 32rpx;
    color: #aaa;
}